@page "/courses"
@inherits DisplayCoursesBase

<h3>Display Courses</h3>
    <!-- page title -->
 <section class="page-title-section overlay" data-background="images/backgrounds/page-title.jpg">
     <div class="container">
         <div class="row">
             <div class="col-sm-12">
                 <ul class="list-inline custom-breadcrumb" style="text-align: center;">
                     <li class="list-inline-item"><a class="h2 text-primary font-secondary text-center" href="#" style="color: #fff !important; font-size: 58px;">YOUR COURSES</a></li>
                     <li class="list-inline-item text-white h3 font-secondary "></li>
                 </ul>
                 <p class="text-center" style="color: #d6d6e6 !important; font-size: 18px; margin-top: 15px;">More Study.. More Grades</p>
             </div>
         </div>
     </div>
 </section>
 <!-- /page title -->
@if (Courses == null)
{
    <h1>Loading</h1>
}
else
{
<section class="section">
    <div class="container">
        <!-- course list -->
        <div class="row justify-content-center">
            <!-- course item -->
            @foreach (var course in Courses)
            {
                <div class="col-lg-4 col-sm-6 mb-5">
                    <div class="card p-0 border-primary rounded-0 hover-shadow">
                        <img class="card-img-top rounded-0" src="@course.LogoPath" alt="@course.Name">
                        <div class="card-body">
                            <a href="course-lectures.html">
                                <h4 class="card-title"> @course.Name</h4>
                            </a>
                            <p class="card-text mb-4">
                                @foreach (var doctor in course.DRID)
                                {
                                    <h4>@doctor</h4>
                                }
                            </p>
                            <a href="@($"/coursedetails/{course.Id}")" class="btn btn-primary btn-sm">Start</a>
                        </div>
                    </div>
                </div>

            }
        </div>
        </div>
 </section>
 }
