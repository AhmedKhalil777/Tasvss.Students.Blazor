@page "/addproject"
@inherits AddProjectBase

<section class="page-title-section overlay" data-background="images/backgrounds/page-title.jpg">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ul class="list-inline custom-breadcrumb" style="text-align: center;">
                    <li class="list-inline-item"><a class="h2 text-primary font-secondary text-center" href="#" style="color: #fff !important; font-size: 58px;">CREATE YOUR PROJECTS</a></li>
                    <li class="list-inline-item text-white h3 font-secondary "></li>
                </ul>
                <p class="text-center" style="color: #d6d6e6 !important; font-size: 18px; margin-top: 15px;">Make More Projects For Your StartUp</p>
            </div>
        </div>
    </div>
</section>
<!-- /page title -->

<br>
<EditForm Model="@Project" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label style="margin-left: 250px ; font-size: 40px; color: #1695e4; font-weight: bolder; font-style: italic; font-family: Arial, Helvetica, sans-serif;" for="exampleInputEmail1">Project Name</label>
        <InputText @bind-Value="@Project.Name" placeholder="Enter project name" style="width: 800px; margin: 20px auto;" type="text" class="form-control"
                   id="projectname" aria-describedby="emailHelp"></InputText>
        <ValidationMessage class="offset-sm-3 col-sm-8"  For="@(() => Project.Name)" />

    </div>
    <button style="margin-left: 250px ;" type="submit" class="btn btn-primary">Submit</button>
</EditForm>

