@page "/addtodo/{ProjectId}"
@inherits AddToDoBase


<!-- page title -->
<PageTitle />
<!--/page title -->


<EditForm Model="@ToDo" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>Add ToDo</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            ToDo Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="Name"
                       @bind-Value="ToDo.Name" />
            <ValidationMessage For="@(() => ToDo.Name)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Descreption
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Descreption"
                       @bind-Value="ToDo.Descreption" />
            <ValidationMessage For="@(() => ToDo.Descreption)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="dateOfBirth" class="col-sm-2 col-form-label">
            StartDate
        </label>
        <div class="col-sm-10">
            <InputDate @bind-Value="ToDo.StartDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="dateOfBirth" class="col-sm-2 col-form-label">
            EndDate
        </label>
        <div class="col-sm-10">
            <InputDate @bind-Value="ToDo.EndDate" class="form-control" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>