@page "/addtodo/{ProjectId}"
@inherits AddToDoBase


<section class="page-title-section overlay" data-background="images/backgrounds/page-title.jpg">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ul class="list-inline custom-breadcrumb" style="text-align: center;">
                    <li class="list-inline-item"><a class="h2 text-primary font-secondary text-center" href="#" style="color: #fff !important; font-size: 58px;">CREATE YOUR ToDo</a></li>
                    <li class="list-inline-item text-white h3 font-secondary "></li>
                </ul>
                <p class="text-center" style="color: #d6d6e6 !important; font-size: 18px; margin-top: 15px;">Add todo to your project</p>
            </div>
        </div>
    </div>
</section>
<!-- /page title -->


<EditForm Model="@ToDo" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>Add ToDo</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            ToDo Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name"
                       @bind-Value="ToDo.Name" />
            <ValidationMessage For="@(() => ToDo.Name)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Descreption
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Last Name"
                       @bind-Value="ToDo.Descreption" />
            <ValidationMessage For="@(() => ToDo.Descreption)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="dateOfBirth" class="col-sm-2 col-form-label">
            StartDate
        </label>
        <div class="col-sm-10">
            <InputDate @bind-Value="ToDo.StartDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="dateOfBirth" class="col-sm-2 col-form-label">
            EndDate
        </label>
        <div class="col-sm-10">
            <InputDate @bind-Value="ToDo.EndDate" class="form-control" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>